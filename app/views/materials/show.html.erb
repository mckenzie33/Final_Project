<div class="jumbotron">
<p>
  <strong>Name:</strong>
  <%= @material.mat_name %>
</p>

<p>
  <strong>Type:</strong>
  <%= @material.mat_type %>
</p>
  <div>
    <%= link_to "Material Properties", @material.property%>
  </div>

<% if is_admin? %>
<%= link_to 'Edit', edit_material_path(@material), class: "btn btn-large btn-primary" %>
<% end %>
<%= link_to 'Back', materials_path, class: "btn btn-large btn-primary" %>

</div>
<%= link_to 'Add Testfile', new_testfile_path, class: "btn btn-large btn-primary" %>
<% if @testfiles.any? %>
<h1>Listing testfiles</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Filename</th>
      <th>File Type</th>
      <th>Material Name</th>
      <th></th>
      <% if is_admin? %>
      <th></th>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @testfiles.each do |testfile| %>
      <tr>
	<td><%= link_to File.basename(testfile.filename.url), testfile.filename_url %><br><%= link_to 'or Download File', :controller => 'testfiles', :action => 'download', :id => testfile.id %></td>        
	<td><%= testfile.file_type %></td>	
	<td><%= testfile.mat_name %></td>	
    <td><%= link_to 'Show', testfile %></td>

	<% if is_admin? %>
        <td><%= link_to 'Edit', edit_testfile_path(testfile) %></td>
        <td><%= link_to 'Destroy', testfile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>

</table>
<br>

<% end %>