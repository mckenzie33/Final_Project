
<div class="container", align="center">
	<div class="col-lg-6", align="center"><h1>Sign up</h1>
  		<div class="well", align="center">

	 
    <%= form_for(@user, :class => "bs-example form-horizontal", :html => {:multipart => true}) do |f| %>
	<% if @user.errors.any? %>    	
	<%= render 'shared/error_messages', object: f.object %>
	<% end %>	
	<div class="form-group">
	      	  		<%= f.label :name, class: "col-lg-2 control-label" %>
		  		<div class="col-lg-10">
		    			<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
		  		</div>
	</div>     
	<div class="form-group">
	      	  		<%= f.label :email, class: "col-lg-2 control-label" %>
		  		<div class="col-lg-10">
		    			<%= f.text_field :email, class: "form-control", placeholder: "Email" %>
		  		</div>
	</div>
	<div class="form-group">
	      	  		<%= f.label :password, class: "col-lg-2 control-label" %>
		  		<div class="col-lg-10">
		    			<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
		  		</div>
	</div>
	<div class="form-group">
	      	  		<%= f.label :password_confirmation, class: "col-lg-2 control-label" %>
		  		<div class="col-lg-10">
		    			<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
		  		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-3  col-lg-offset-2">      		
			<%= f.submit "Sign Up", class: "btn btn-large btn-primary" %>
			<%= button_tag "Cancel", :type => 'button', :class => "btn btn-large btn-primary", :onclick => "location.href = '#{root_path}'" %>
		</div>
	</div>
      <p>Already a member? <%= link_to "Login", signin_path %></p>
	<% end %>
	
    </div>
  </div>
</div>
</div>
