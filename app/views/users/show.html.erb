
<div class="jumbotron">
		<span style="float: left; margin-right: 15px;">
    	<%= image_tag(@user.avatar_url.to_s, :size => "200x200") %>
    </span>
		<h1><%= @user.name %></h1>
		<h3><%= @user.email %></h3>
		<p>This is your Dashboard! Choose what you want to do:</p>
		<% if is_admin? %>
			<p>DEBUG: YOU ARE ADMIN</p>
		<% end %>
		<%= button_to 'Edit Profile', edit_user_path %>
		<h2> Your testfiles </h2>
		<% if @testfiles.any? %>
			<table class="table table-striped table-hover ">
 			<thead>
    		<tr>
      			<th>Filename</th>
      			<th>File Type</th>
      			<th>Material Name</th>
      			<th>Material Type</th>
      			<th>Time Added</th>
      			<th>Date Added</th>
      			<th>Comments</th>
      			<th></th>
      			<% if is_admin? %>
      			<th></th>
      			<th></th>
      			<% end %>
    		</tr>
  			</thead>

  			<tbody>
    			<% @testfiles.each do |testfile| %>
      			<tr>
				<td><%= link_to File.basename(testfile.filename.url), testfile.filename_url %></td>        
				<td><%= testfile.file_type %></td>	
				<td><%= testfile.mat_name %></td>	
  				<td><%= testfile.material.mat_type %></td>
  				<td><p><%= testfile.created_at.strftime("%l:%M:%S %p") %></p></td>
  				<td><p><%= testfile.created_at.strftime("%m/%d/%y") %></p></td>
  				<td><%= testfile.comments %></td>
        		<td><%= link_to 'Edit', edit_testfile_path(testfile) %></td>
        		<td><%= link_to 'Delete', testfile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      			</tr>
    			<% end %>
  			</tbody>

			</table>
			<br>
		<% end %>

		<h2> Your materials </h2>
		<%if @materials.any? %>
			<table class="table table-striped table-hover ">
 			<thead>
    		<tr>
      			<th>Material Name</th>
      			<th>Material Type</th>
      			<th>Time Addded</th>
      			<th>Date Added</th>
      			<th></th>
      			<% if is_admin? %>
      			<th></th>
      			<th></th>
      			<% end %>
    		</tr>
  			</thead>

  			<tbody>
    			<% @materials.each do |material| %>
      		<tr>        
      		<td><%= material.mat_name %></td>	
  				<td><%= material.mat_type %></td>
  				<td><p><%= material.created_at.strftime("%l:%M:%S %p") %></p></td>
  				<td><p><%= material.created_at.strftime("%m/%d/%y") %></p></td>
  				<% if is_admin? %>
        		<td><%= link_to 'Edit', edit_material_path(material) %></td>
        		<td><%= link_to 'Delete', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      			</tr>
      			<% end %>
    			<% end %>
  			</tbody>

			</table>
		<% end %>
</div>
<br>











